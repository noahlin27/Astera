<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.noahlin.blog4u.dao.NewsDAO">
    <sql id="TABLE_NAME">news</sql>
    <sql id="SELECT_FIELDS">id
    , title, link, image, like_count, comment_count, create_time, user_id</sql>
    <sql id="INSERT_FIELDS">title
    , link, image, like_count, comment_count, create_time, user_id</sql>

    <insert id="addNews" parameterType="top.noahlin.blog4u.model.User">
        INSERT into
        <include refid="TABLE_NAME"></include>
        (<include refid="INSERT_FIELDS"></include>)
        values (#{title}, #{link}, #{image}, #{likeCount}, #{commentCount}, #{createTime}, #{userId})
    </insert>

    <select id="selectByUserIdAndOffset"
            resultType="top.noahlin.blog4u.model.News">
        SELECT
        <include refid="SELECT_FIELDS"></include>

        FROM
        <include refid="TABLE_NAME"></include>
        <if test="userId!=0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset}, #{limit}
    </select>
</mapper>